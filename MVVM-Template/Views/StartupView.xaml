<UserControl x:Class="MVVM_Template.Views.StartupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_Template.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel>
        <TextBlock Text="Startup!"/>
        <TextBlock Text="{Binding ExampleProperty, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Content="Press me!" Command="{Binding NavigateToLogin}"/>
    </StackPanel>
    
</UserControl>
